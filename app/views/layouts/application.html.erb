<!DOCTYPE html>
<html>
  <head>
    <title>Dischat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
      <script>
        window.currentUser = <%= render('/api/users/user.json.jbuilder', user: current_user).html_safe %>;
      </script>
    <% end %>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
